<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{mm:ss} %-5p- %m%n"/>
    </Console>

    <RollingFile name="FileAppender"
                 fileName="Judah.log"
                 filePattern="Judah-%i.log">
      <PatternLayout pattern="%d{mm:ss} %-5p- %m%n"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="10MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10"/>
    </RollingFile>
  </Appenders>

  <Loggers>
    <Logger name="be.tarsos.dsp.io.PipeDecoder" level="error" additivity="false"/>
    <Logger name="org.jaudiolibs.jnajack" level="error" additivity="false"/>

    <Root level="debug">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="FileAppender"/>
    </Root>
  </Loggers>
</Configuration>
